<h1>Passing the <%= @test_passage.test.title %> Test</h1>

<div class="timer" data-timer = "<%= @test_passage.test.time %>"></div>

<p><b><%= @test_passage.current_question.text %></b></p>
<div class="progressBar">
  <%= content_tag :div, nil,
                        class: "progressBar-fill", 
                        data: {
                        question_number: @test_passage.current_question_number,
                        question_count: @test_passage.test.questions.count
                        } %>
</div>

<p>Question #<%= @test_passage.current_question_number %> / <%= @test_passage.test.questions.count %></p>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :text, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= link_to 'Gist Question', gists_path(@test_passage.id), method: :post %></p>
  <p><%= form.submit 'Next' %></p>
<% end %>
