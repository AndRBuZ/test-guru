<h1><%= t('.header') %></h1>

<%= link_to t('.new'), new_admin_test_path %>
<%= link_to t('.created_gists'), admin_gists_path %>
<%= link_to t('.create_badge'), new_admin_badge_path %>

<%= render 'shared/errors', resource: @test %>

<table class="table table-bordered text-center">
  <thead class="table-primary border-primary">
    <tr class="sort-by-title pointer">
      <th>
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.number_of_questions') %></th>
      <th><%= t('.time')%></th>
      <th colspan=3><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tests %>
  </tbody>
</table>
