<h1>Create badge</h1>

<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badges %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :rule %>
    <%= form.select :rule, @rules %>
  </p>

  <p>
    <%= form.label :img_name %>
    <%= form.select :img_name, @img %>
  </p>

  <p><%= form.submit %></p>
<% end %>
